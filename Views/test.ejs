<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>แสดงความคิดเห็น</title>
    <link rel="stylesheet" href="/Css/csstest.css">
</head>

<header>
    <nav>
        <a href="/home" class="nav-button"><h3>Back</h3></a>
    </nav>
</header>

<body>
    <form id="commentForm" action="/add-comment" method="post">
        <div class="comment-box">
            <h2>แสดงความคิดเห็น</h2>
            <input type="text" name="user" id="name" placeholder="ชื่อของคุณ" required>
            <textarea id="comment" name="comment" placeholder="พิมพ์ความคิดเห็นของคุณ..." required></textarea>
            <button type="submit">ส่งความคิดเห็น</button>
        </div>
    </form>
    
    <div class="comments" id="comments">
        <h3>ความคิดเห็นล่าสุด</h3>
    </div>

    <script>
       
    document.getElementById("commentForm").addEventListener("submit", function(event) {
    event.preventDefault();  // ป้องกันการรีเฟรชหน้า

    let name = document.getElementById("name").value;
    let commentText = document.getElementById("comment").value;
    let submitButton = document.querySelector("button[type='submit']");

    // ตรวจสอบว่ามีข้อมูลหรือไม่
    if (!name || !commentText) {
        alert("กรุณากรอกชื่อและความคิดเห็น");
        return;
    }

    // ปิดปุ่มชั่วคราวระหว่างส่ง
    submitButton.disabled = true;

    fetch('/add-comment', {
        method: 'POST',
        headers: {
            'Accept': 'application/json',
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ user: name, comment: commentText })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('ส่งความคิดเห็นสำเร็จ');

            // อัปเดตหน้าเว็บทันทีโดยเพิ่มความคิดเห็นใหม่เข้าไปใน HTML
            let commentsDiv = document.getElementById("comments");
            let newComment = document.createElement("div");
            newComment.classList.add("comment-item");

            // ใส่เวลาปัจจุบัน
            let now = new Date();
            let timestamp = now.getFullYear() + "-" + 
                            ("0" + (now.getMonth() + 1)).slice(-2) + "-" + 
                            ("0" + now.getDate()).slice(-2) + " " + 
                            ("0" + now.getHours()).slice(-2) + ":" + 
                            ("0" + now.getMinutes()).slice(-2) + ":" + 
                            ("0" + now.getSeconds()).slice(-2);

            newComment.innerHTML = `<strong>${name}</strong> (${timestamp}): <br> ${commentText}`;
            commentsDiv.insertBefore(newComment, commentsDiv.firstChild);

            // ล้างค่าในฟอร์ม
            document.getElementById("name").value = '';
            document.getElementById("comment").value = '';

        } else {
            alert('เกิดข้อผิดพลาด: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('เกิดข้อผิดพลาดในการส่งความคิดเห็น');
    })
    .finally(() => {
        // เปิดปุ่มอีกครั้ง
        submitButton.disabled = false;
    });
});



    </script>
</body>
</html> 